# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{ts,tsx,js,jsx}]
indent_size = 2

[*.{go}]
indent_style = space
indent_size = 4

[Makefile]
indent_style = space
indent_size = 4
